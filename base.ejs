<%- include('header') -%>

<div class="text-center center-div" id="login">
     <div class="container w-25 border py-5 bg-black">
                <div class="title pb-5">
                    <h2 class="font-weight-bold">
                        Login System
                    </h2>

                    <span>Log in for the existing users</span>

                    <% if(locals.logout){ %>
                       <div class="alter alert-success text-center">
                        Logout Successfully....!!!
                       </div>
                   <% }%>
                </div>
                <form action="/route/login" method="POST" class="pt-3">
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="email" name="email">
                        <small class="form-text text-muted text-left">Register email address</small>  
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="password">
                    </div>
                    <button type="submit" class="btn btn-success rounded-pill">Log in</button>
                    
                </form>
                <br>
                <form action="/route/regis" method="POST" pt-3>
                    
                    <button type="submit" class="btn btn-success rounded-pill">Register</button>

                </form>
     </div>
</div>
<%- include('footer') -%>